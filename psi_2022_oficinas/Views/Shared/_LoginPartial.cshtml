@using Microsoft.AspNetCore.Identity
@using psi_2022_oficinas.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<ul style="display:flex; color:#0077cc">

@if (SignInManager.IsSignedIn(User))
{
    <li >
        <a class="w3-bar-item w3-button w3-hide-small w3-hover-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li >
        <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit">Logout</button>
        </form>
    </li>
}

else
{
    <li >
        <a class="w3-bar-item w3-button w3-hide-small w3-hover-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li >
        <a class="w3-bar-item w3-button w3-hide-small w3-hover-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
