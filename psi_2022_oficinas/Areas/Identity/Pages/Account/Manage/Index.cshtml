@page
@model IndexModel
@{
    ViewData["Title"] = "Dados do Cliente";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" disabled/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" disabled />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            }
            @if (User.IsInRole("Cliente"))
            {
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control"/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
                <div class="form-floating">
                    <input asp-for="Input.PrimeiroNome" class="form-control" />
                    <label asp-for="Input.PrimeiroNome" class="form-label"></label>
                    <span asp-validation-for="Input.PrimeiroNome" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Apelido" class="form-control" />
                    <label asp-for="Input.Apelido" class="form-label"></label>
                    <span asp-validation-for="Input.Apelido" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.DataNasc" class="form-control" />
                    <label asp-for="Input.DataNasc" class="form-label"></label>
                    <span asp-validation-for="Input.DataNasc" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Morada" class="form-control" />
                    <label asp-for="Input.Morada" class="form-label"></label>
                    <span asp-validation-for="Input.Morada" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.CodPostal" class="form-control" />
                    <label asp-for="Input.CodPostal" class="form-label"></label>
                    <span asp-validation-for="Input.CodPostal" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.NIF" class="form-control" />
                    <label asp-for="Input.NIF" class="form-label"></label>
                    <span asp-validation-for="Input.NIF" class="text-danger"></span>
                </div>
            
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
                <div class="form-floating">
              <input asp-for="Input.NCartaConducao" class="form-control" />
                    <label asp-for="Input.NCartaConducao" class="form-label"></label>
              <span asp-validation-for="Input.NCartaConducao" class="text-danger"></span>
            </div>
             
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Guardar</button>
        }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
